<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\Logo.ico</ApplicationIcon>
    <PackageId>WpfNetCore</PackageId>
    <AssemblyName>Kurosawa Dia</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\KurosawaDia.png" />
    <None Remove="Resources\KurosawaRuby.png" />
    <None Remove="Resources\MatsuuraKanan.png" />
    <None Remove="Resources\TsushimaYoshiko.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\KurosawaDia.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\KurosawaRuby.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\MatsuuraKanan.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\TelaInicial.mp4">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\TsushimaYoshiko.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Styles\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\Logo.ico">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>